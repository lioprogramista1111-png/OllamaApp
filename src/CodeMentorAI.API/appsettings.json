{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.SignalR": "Debug",
      "CodeMentorAI": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Ollama": {
    "BaseUrl": "http://localhost:11434",
    "DefaultModel": "llama2:7b",
    "RequestTimeout": 300,
    "MaxConcurrentRequests": 5,
    "EnablePerformanceTracking": true,
    "EnableModelDownloads": true,
    "MaxDownloadConcurrency": 2,
    "ModelConfigurations": {
      "codellama:7b": {
        "Temperature": 0.1,
        "TopK": 40,
        "TopP": 0.95,
        "NumCtx": 4096,
        "OptimalFor": ["code_analysis", "code_generation", "debugging"]
      },
      "llama2:7b": {
        "Temperature": 0.7,
        "TopK": 40,
        "TopP": 0.9,
        "NumCtx": 4096,
        "OptimalFor": ["chat", "documentation", "code_review"]
      },
      "mistral:7b": {
        "Temperature": 0.5,
        "TopK": 40,
        "TopP": 0.9,
        "NumCtx": 8192,
        "OptimalFor": ["documentation", "chat"]
      }
    }
  },
  "SignalR": {
    "EnableDetailedErrors": true,
    "MaximumReceiveMessageSize": 32768,
    "StreamBufferCapacity": 10,
    "TransportMaxBufferSize": 32768,
    "ApplicationMaxBufferSize": 32768,
    "MaximumParallelInvocationsPerClient": 1,
    "EnableMessagePackProtocol": false
  },
  "Performance": {
    "EnableMetricsCollection": true,
    "MetricsRetentionDays": 30,
    "MaxRecordsPerModel": 1000,
    "EnableRealTimeUpdates": true
  },
  "Features": {
    "EnableModelAutoSwitch": true,
    "EnableModelPreloading": true,
    "EnablePerformanceComparison": true,
    "EnableModelRecommendations": true,
    "EnableModelPulling": true,
    "EnableModelRemoval": true
  }
}
